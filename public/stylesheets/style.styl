html
    overflow-y scroll

#page
    margin 0px auto
    max-width 1000px

#list
    margin-top 30px
    position fixed

#search
    margin 10px auto
    input[type=text]
        width 350px

.price
    width 50px
    font-weight bold
    text-align center !important

.restaurant
    margin-bottom 50px
    padding 1px 10px
    tr
        background #fff

@keyframes highlight
    0%, 20%
        background #dbe5ff
    100%
        background none

.restaurant-highlight
    animation highlight 3s
    -moz-animation highlight 3s
    -webkit-animation highlight 3s
    -o-animation highlight 3s
